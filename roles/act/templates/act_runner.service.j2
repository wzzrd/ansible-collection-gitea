[Unit]
Description=Gitea act_runner daemon
After=network.target
Requires=network-online.target
StartLimitIntervalSec=60

[Service]
User={{ act_user }}
Group={{ act_user_group }}
Environment=HOME={{ act_user_home }}
WorkingDirectory={{ act_user_home }}
Type=simple
ExecStart={{ act_bin_dir }}/act_runner daemon -c {{ act_user_home }}/config.yaml
Restart=on-failure
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
